{
	"version": "2.0.0",
	"tasks": [{
    "label": "build-npm-script",
    "command": "yarn",
    "type": "shell",
    "isBackground": true,
    "args": [
        "--prefix",
        "${workspaceFolder}/src",
        "dev"
    ],
    "problemMatcher": [
        {
            "base": "$ts-webpack",
            "pattern": {
                "regexp": "^$"
            },
            "background": {
                "activeOnStart": true,
                "beginsPattern": "^.*Project is running at.*$",
                "endsPattern": "^.*Compiled successfully.*$"
            }
        },{
            "base": "$tslint-webpack",
            "pattern": {
                "regexp": "^$"
            },
            "background": {
                "activeOnStart": true,
                "beginsPattern": "^.*Project is running at.*$",
                "endsPattern": "^.*Compiled successfully.*$"
            }
        }]
    },{
		"label": "build-mvc-compounds",
		"type": "shell",
		"command": "echo build Done ",
		"dependsOrder": "sequence",
		"dependsOn": [
			"build-npm-script"
		]
	},
    {
        "label": "ng-kill",
        "type": "shell",
        "command": "killall ng"
    }]
}